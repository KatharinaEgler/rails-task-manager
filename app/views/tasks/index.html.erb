<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>

    <label>
    <input type="checkbox" name="completed" <%=(task.completed ? "checked" : "")%>>
    </label>
      <%= link_to task.title, task_path(task) %>
      <%= link_to task_path(task),{method: :delete} do %>
        <i class="fas fa-trash"> </i>
      <% end %>



    </li>

  <% end %>

  </li>
<br>

<%= link_to "Add a new task", new_path %>

</ul>
